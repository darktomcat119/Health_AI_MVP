# Application
APP_NAME="AI Clinical Chatbot MVP"
APP_VERSION="0.1.0"
APP_ENV=development
APP_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# LLM Provider: mock | openai | anthropic
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=300
LLM_TEMPERATURE=0.7

# Risk Assessment Thresholds
RISK_THRESHOLD_HIGH=60
RISK_THRESHOLD_CRITICAL=80

# Session Configuration
SESSION_MAX_MESSAGES_BEFORE_CHECKIN=15
MAX_SESSION_DURATION_MINUTES=60

# Data Paths
RISK_KEYWORDS_PATH=app/data/risk_keywords.json
CRISIS_RESOURCES_PATH=app/data/crisis_resources.json

# CORS
FRONTEND_URL=http://localhost:3000
